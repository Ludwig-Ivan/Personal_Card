<style>
    h1 {
        padding: 0px;
        margin: 0px;
        align-self: center;
    }

    h1 a {
        transition-duration: 0.5s;
        font-size: 1em;
    }

    h1 a:hover {
        color: #f2f2f2;
        transition-duration: 1s;
        font-size: 1.5em;
        animation: colorChange 5s infinite;
    }

    @keyframes colorChange {
        0% {
            color: red;
        }
        25% {
            color: blue;
        }
        50% {
            color: green;
        }
        75% {
            color: orange;
        }
        100% {
            color: red;
        }
    }

    .Cabezera {
        height: 78px;
        display: flex;
        flex-direction: row;
        align-items: end;
        justify-content: space-between;
        background-color: #8758ff;
        padding: 0px 50px;
        position: sticky;
        top: 0px;
    }
    ul {
        display: flex;
        flex-direction: row;
        gap: 50px;
        margin: 0px;
    }
    li {
        list-style: none;
        padding: 10px 20px;
        border-radius: 10px 10px 0px 0px;
        transition-duration: 0.3s;
    }
    li:hover {
        transition-duration: 0.3s;
        background-color: rgba(0, 0, 0, 0.3);
        padding: 10px 30px;
    }
    a {
        text-decoration: none;
        color: #f2f2f2;
        font-weight: 900;
        font-size: 18px;
        letter-spacing: 0px;
    }
</style>
