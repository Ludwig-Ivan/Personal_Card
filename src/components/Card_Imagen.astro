---
interface Props {
    imagen: string;
    clase: string;
    color: string;
}

const { imagen, clase, color } = Astro.props;
---

<div class={"card " + clase} style={{ backgroundColor: color }}>
    <img class="imagen" src={imagen} alt="imagen de un gusto" />
</div>

<style>
    .card {
        box-sizing: border-box;
        height: 500px;
        width: 380px;
        background-color: #8758ff;
        border-radius: 20px;
        position: absolute;
        right: 10%;
        top: 6vh;
        box-shadow: #000 1px 1px 30px;
        transition-duration: 1s;
        overflow: hidden;
    }

    img {
        height: 500px;
        width: 380px;
        object-fit: fill;
    }

    .card:hover {
        transition-duration: 1s;
        transform: rotate(5deg);
        transform-origin: bottom right;
    }

    .uno {
        right: 13%;
        z-index: 17;
    }
    .dos {
        right: 12%;
        z-index: 16;
    }
    .tres {
        right: 11%;
        z-index: 15;
    }

    .cuatro {
        right: 10%;
        z-index: 14;
    }

    .cinco {
        right: 9%;
        z-index: 13;
    }

    .seis {
        right: 8%;
        z-index: 12;
    }

    .siete {
        right: 7%;
        z-index: 11;
    }

    .ocho {
        right: 6%;
        z-index: 10;
    }
</style>
