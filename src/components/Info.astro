---
interface Props {
    title: string;
    img: string;
    ref: string;
}

const { title, img, ref } = Astro.props;
---

<div class="Info_Sec">
    <img src={img} alt="Imagen de Seccion" />
    <a href={ref}>{title ? title : "Boton"}</a>
</div>

<style>
    .Info_Sec {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        height: 520px;
        width: 378px;
        background-color: #8758ff;
        border-radius: 10px;
        overflow: hidden;
    }

    img {
        height: 274px;
        width: 378px;
        image-rendering: optimizeQuality;
        align-self: flex-start;
        border-radius: 10px 10px 0px 0px;
        transition-duration: 1s;
    }

    img:hover {
        transition-duration: 1s;
        transform: scale(1.2);
    }

    a {
        color: #181818;
        text-decoration: none;
        margin-bottom: 80px;
        padding: 10px 40px;
        background-color: #f2f2f2;
        font-size: 18px;
        font-weight: 900;
        border-radius: 10px;
        transition-duration: 0.5s;
    }

    a:hover {
        transition-duration: 0.5s;
        transform: scale(1.2);
    }
</style>
