---
import Layout from "../layouts/Layout.astro";
import Cabezera from "../components/Cabezera.astro";
---

<Layout title="Cupon">
    <main>
        <Cabezera />
        <div class="contenido">
            <div class="cupon">
                <div class="cupon_inner">
                    <p>
                        ----------------------------- <br /><br />
                        Cupon valido para que conteste cualquier pregunta que desees
                        <br /><br />
                        -----------------------------
                    </p>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    .contenido {
        height: 700px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .cupon {
        background-color: #8758ff;
        height: 60vh;
        width: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 30px;
        animation: cupon 10s infinite;
    }

    @keyframes cupon {
        0% {
            transform: scale(1);
        }
        25% {
            transform: scale(1.1);
        }
        50% {
            transform: scale(1);
        }
        75% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }

    .cupon_inner {
        background-color: #f2f2f2;
        height: 50vh;
        width: 90vh;
        border-radius: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .cupon_inner p {
        height: 30vh;
        width: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        font-size: 30px;
        font-weight: 900;
    }
</style>
