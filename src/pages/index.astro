---
import Layout from "../layouts/Layout.astro";
import Cabezera from "../components/Cabezera.astro";
import Info from "../components/Info.astro";
---

<Layout title="Personal_Page">
	<main>
		<Cabezera />
		<div class="Frase_contenido">
			<div class="Frase_imagen"><img src="#" alt="Frase Favorita" /></div>
			<div class="Frase_texto">
				<p>
					Lorem ipsum dolor sit amet consectetur adipisicing elit. Eum
					provident architecto necessitatibus eos quos fuga omnis
					praesentium ipsa ducimus, iste est beatae modi illo? Officia
					suscipit molestiae ducimus rem praesentium?
				</p>
			</div>
		</div>
		<div class="Personal_contenido">
			<div class="Personal_recuadro">
				<p>
					Lorem ipsum dolor sit amet, consectetur adipisicing elit.
					Cupiditate, reprehenderit! Reprehenderit quia, similique
					beatae labore dolores odit corporis blanditiis recusandae
					quos illum. Hic, perspiciatis. Sunt et vel eius provident
					sint.
				</p>
				<img src="#" alt="Imagen Identificativa" />
			</div>
		</div>
		<div class="Info_contenido">
			<Info />
			<Info />
			<Info />
		</div>
		<div class="Pie_contenido">
			<div class="Pie_redes"></div>
			<div class="Pie_autor"></div>
		</div>
	</main>
</Layout>

<style>
	/* Estilos Generales */
	main {
		height: 2419px;
	}

	/* Estilos Principal1 */
	.Frase_contenido .Frase_imagen,
	.Frase_texto {
		width: 50%;
		background-color: #181818;
		height: 640px;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.Frase_contenido {
		height: 720px;
		display: flex;
		flex-direction: row;
		background-color: #181818;
	}

	.Frase_texto p {
		color: #f2f2f2;
		font-size: 22px;
		font-weight: 600;
		text-align: center;
	}

	.Frase_contenido .Frase_texto {
		margin-right: 50px;
	}

	.Frase_contenido .Frase_texto img {
		width: 50%;
		height: 50%;
	}

	/* Estilos Principal2 */

	.Personal_contenido {
		height: 720px;
		display: flex;
		flex-direction: row;
		align-items: center;
		background-color: #181818;
	}

	.Personal_contenido .Personal_recuadro {
		background-color: #5cb8e4;
		height: 550px;
		padding: 50px;
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-around;
	}

	.Personal_contenido .Personal_recuadro p {
		width: 50%;
		margin: 0px;
		font-size: 18px;
		font-weight: 600;
	}

	.Personal_contenido .Personal_recuadro img {
		height: 250px;
		width: 250px;
	}

	/* Estilos Principal3 */
	.Info_contenido {
		display: flex;
		flex-direction: row;
		justify-content: space-around;
		align-items: center;
		height: 720px;
		background-color: #181818;
	}

	/* Estilos Principal4 */
	.Pie_contenido {
		height: 259px;
		background-color: #181818;
	}

	.Pie_redes,
	.Pie_autor {
		background-color: #5cb8e4;
		height: 50%;
	}

	.Pie_redes {
		background-color: #8758ff;
	}
</style>
