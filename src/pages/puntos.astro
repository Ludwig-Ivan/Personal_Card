---
import Layout from "../layouts/Layout.astro";
import Cabezera from "../components/Cabezera.astro";
---

<Layout title="Puntos">
    <main>
        <Cabezera />
        <div class="contenedor">
            <div class="formulario">
                <p>
                    Pagina no disponible por el momento <br /> Contacte con el desarrollador
                    para saber fecha de operacion
                </p>
            </div>
        </div>
    </main>
</Layout>

<style>
    .contenedor {
        height: 700px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .formulario {
        background-color: #8758ff;
        height: 60vh;
        width: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 30px;
    }
    p {
        height: 30vh;
        width: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        font-size: 20px;
        font-weight: 900;
    }
</style>
